        border: 1px solid #E0E0E0;
        margin-right:15px;
        padding:5px;
    }





    .section-image{
        display:block;
        width:100%;
        height:200px;
        background-color:darkorange;
        color:azure;
        border-radius:10px;
        font-size:medium;
        margin-top:40px;
    }

    .popular-categories div{
        height:80px;
        width:fit-content;
        text-align:center;
        align-content:center;
    }

    .popular-categories div div{
        height:40px;
        display:inline-block;
        margin:5px;
    }

    .popular-categories div div img{
        height:90px;
        width:100px;
        border: 1px solid #E0E0E0;
        padding:5px;
        border-radius:10px;
    }

    .hot-deal-products div{
        display:inline-block;
    }

    .hot-deal-products div .product-info{
        width:200px;
