@model HomeViewModel


<section class="section-image">
    <div class="w-auto p-3">
        <div class="" style="display:inline-block">
            <h2 class="mb-4">Free Delivery!</h2>
            <p class="section-image-paragraph">Don't miss it out! Only today, get free <span><b>Next Day</b></span> delivery<br /> on all your orders.</p>
            <a href=#Hot-Deals-Section class="btn" style="background-color:white;color:darkorange;border-radius:10px;">
                Browse Products
             </a>
        </div>
        <img class="rounded float-end" src="~/images/UI/—Pngtree—super fast delivery man fly_5370144.png" style="width:200px;height:150px;margin-left:200px; margin-left:50px;"/>
    </div>
</section>

<section class="popular-categories">
    <p class="text-center fs-4 mt-5">
        <b>Popular Categories</b> <i  class="bi bi-stars"></i>
    </p>
    <div class="container text-center">
        <div class="col">
            <a asp-controller="" asp-action="">
                <img src="~/images/UI/laptop.png"/>
            </a>
        </div>
        <div class="col">
            <a asp-controller="" asp-action="">
                <img src="~/images/UI/jewelry-50.png"/>
            </a>
        </div>
        <div class="col">
            <a asp-controller="" asp-action="">
                <img src="~/images/UI/man t-shirt.png"/>
            </a>
        </div>
        <div class="col">
            <a asp-controller="" asp-action="">
                <img src="~/images/UI/woman-clothes image.png"/>
            </a>
        </div>
        
    </div>
</section>

<section class="hot-deals" id="Hot-Deals-Section">
    <p class="text-center mt-5">
        <b>Hot Deals</b> <img src="~/images/UI/fire (1).png" style="height:20px; width:20px;"/>
     </p>
    <section class="hot-deal-products row-cols-3">
        @foreach(var product in Model.allProducts)
        {
              <div class="card">
                    <div class="w-100">
                        <img src="@product.ImageUrl" />
                    </div>

             @*        <div class="product-info"style="width:190px;"> *@
                    <p class="product-name"><b>@product.Name</b></p>
                    <p class="product-category">@product.Category.CategoryName</p>
                    <p class="price-info">
                        <span class="price"><b>@((@product.Price - (@product.Price * 0.06m)).ToString("C2"))</b></span>
                        <span style="color:red;"><del>@((@product.Price).ToString("C2"))</del></span>
                        <span style="color:brown;margin-left:5px;"><b>(60% OFF)</b></span>
                    </p>
                    <a class="btn">
                        View Product
                    </a>
                    </div>
       @*        </div> *@
        }
     </section>

</section>

